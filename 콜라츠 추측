#include <string>
#include <vector>
#include <iostream>

using namespace std;

int solution(int num) {
    int answer = 0;
    long long tmp = num;
    while(1){
        if(tmp==1) return answer;
        if(answer>=500)return -1;
        
        if(tmp%2==0){
            tmp/=2;
        }else{
            tmp=tmp*3+1;
        }
        answer++;
    }
   
}
